

<h1>Shares</h1>

<%= link_to 'New Share', new_share_path, :class => "btn btn-danger" %>


<% @shares.each do |share| %>
<div class="media">
  <div class="media-left">
    <a href="#">
      <%= image_tag share.image.url(:medium) %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to share.title, share %></h4>
    <p class="content">
      <%= share.descriptions %>
    </p>
      <a><strong>Writter: </strong></a>  <%= share.user.email %>
    <%= link_to 'View more...', share %>
  </div>
</div>
<% end %>
<br>
