<p id="notice"><%= notice %></p>

<h1>
  <%= @share.title %>
</h1>

<p>  
  <%= @share.descriptions %>
</p>
<p>
  <%= image_tag @share.image.url, :class => "image-article" %>
</p>
<p>
  <%= @share.body %>
</p>
<p>
  <strong>Type: </strong>
  <a><%= @share.type.name %></a>
</p>

<p> <strong>Writed by: </strong>
  <% if @share.owned_by? current_user %>
      <a>Me</a>
  <% else %>
      <%= @share.user.email %>
  <% end %>
</p>
<div class="actions-show">
<center>
<% if @share.owned_by? current_user %>

 || <%= link_to "Edit", edit_share_path(@share) %> ||
<%= link_to "Delete", @share, confirm: "Are you sure?", method: :delete %>

<% end %> ||
<%= link_to 'Back', shares_path %> ||
</center>

</div>

<% if current_user %>
  <%= render :file => 'commentshares/new' %>
<% else %>
  <%= link_to 'Please login to write comments', login_path, :class => "btn btn-primary" %>
<% end %>
<hr>

<div id="comments">
<%= render @share.commentshares %>
</div>
